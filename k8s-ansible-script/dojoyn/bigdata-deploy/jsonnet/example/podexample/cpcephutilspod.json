{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "bigdata-%NAME%",
        "namespace": "%NAMESPACE%",
        "labels": {
            "app": "bigdata-%NAME%-pod",
            "name": "bigdata-%NAME%"
        }
    },
    "spec": {
        "volumes": [
            {
                "name": "%COMPONENTCEPHUTILS%",
                "persistentVolumeClaim": {
                  "claimName": "%COMPONENTCEPHUTILS%"
                }
            }
        ],
        "containers": [
            {
                "name": "bigdata-%NAME%",
                "image": "%REGISTRY%/tools/he2-centos7:0.1",
                "command": [
                    "tail",
                    "-f",
                    "/etc/hosts"
                ],
                "resources": {
                    "limits": {
                        "cpu": "500m",
                        "memory": "1Gi"
                    },
                    "requests": {
                        "cpu": "500m",
                        "memory": "1Gi"
                    }
                },
                "volumeMounts": [
                    {
                        "name": "%COMPONENTCEPHUTILS%",
                        "mountPath": "/opt/mntcephutils"
                    }
                ],
                "imagePullPolicy": "IfNotPresent",
                "securityContext": {
                    "privileged": false
                }
            }
        ],
        "restartPolicy": "Always"
    }
}
